rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Upload status documents
    match /uploads/{userId}/userUploads/{videoId} {
      // Users can read their own uploads
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Users can create new uploads
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Only server can update processing status
      allow update: if false;
      
      // Users can delete their own uploads
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Add your other existing Firestore rules here
    // For example, user profiles, posts, etc.
  }
}
