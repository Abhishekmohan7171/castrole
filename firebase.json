{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "dist/castrole/browser",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/createRazorpayOrder",
        "function": "createRazorpayOrder"
      },
      {
        "source": "/api/verifyRazorpayPayment",
        "function": "verifyRazorpayPayment"
      },
      {
        "source": "/api/razorpayWebhook",
        "function": "razorpayWebhook"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
